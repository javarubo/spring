<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>test5</servlet-name>
        <servlet-class>am.basic.web.controller.Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>test5</servlet-name>
        <url-pattern>/xyz</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Servlet2</servlet-name>
        <servlet-class>am.basic.web.controller.Servlet2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet2</servlet-name>
        <url-pattern>/55</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>am.basic.web.controller.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>am.basic.web.controller.Registration</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Info</servlet-name>
        <servlet-class>am.basic.web.controller.Info</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Info</servlet-name>
        <url-pattern>/secure/info</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>am.basic.web.controller.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/secure/*</url-pattern>
    </filter-mapping>


    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>am.basic.web.controller.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/secure/logout</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Start</servlet-name>
        <servlet-class>am.basic.web.controller.Start</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Start</servlet-name>
        <url-pattern>/start</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>start</welcome-file>
    </welcome-file-list>


</web-app>